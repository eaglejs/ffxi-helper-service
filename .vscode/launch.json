{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug FFXIHelperService",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/src/FFXIHelperService.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/src",
			"environment": [
				{
					"name": "PATH",
					"value": "C:\\msys64\\mingw32\\bin;${env:PATH}"
				}
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "C:\\msys64\\mingw32\\bin\\gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "cppbuild: C/C++: g++.exe build active file"
		}
	]
}
