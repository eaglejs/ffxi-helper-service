{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\msys64\\mingw32\\bin\\g++.exe",
			"args": [
				"-g",
				"-Wall",
				"-Wextra",
				"-m32",
				"-I${workspaceFolder}\\includes",
				"${fileDirname}\\FFXIHelperService.cpp",
				"${fileDirname}\\helpers\\memory.cpp",
				"${fileDirname}\\helpers\\http.cpp",
				"${fileDirname}\\Player\\Player.cpp",
				"${fileDirname}\\Player\\TacticalPointsProperty.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lcurl"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "C:\\msys64\\mingw32\\bin;${env:PATH}"
				},
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				}
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "CMake: Configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build",
				"-G",
				"MinGW Makefiles",
				"-DCMAKE_BUILD_TYPE=Debug",
				"-DCMAKE_MAKE_PROGRAM=C:/msys64/mingw32/bin/mingw32-make.exe",
				"-DCMAKE_C_COMPILER=C:/msys64/mingw32/bin/gcc.exe",
				"-DCMAKE_CXX_COMPILER=C:/msys64/mingw32/bin/g++.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "C:\\msys64\\mingw32\\bin;${env:PATH}"
				},
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				}
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "CMake: Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "C:\\msys64\\mingw32\\bin;${env:PATH}"
				},
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				}
			},
			"group": "build",
			"problemMatcher": ["$gcc"],
			"dependsOn": "CMake: Configure"
		},
		{
			"label": "CMake: Clean",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "C:\\msys64\\mingw32\\bin;${env:PATH}"
				}
			},
			"group": "build"
		},
		{
			"label": "Build with PowerShell",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-Command",
				"$env:PATH='C:\\msys64\\mingw32\\bin;'+$env:PATH; cmake --build build --config Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": ["$gcc"],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}
